@model List<CustomerManagerApp.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Customer List</h2>
        <a class="btn btn-success" href="@Url.Action("Add", "Customer")">
            Add Customer
        </a>
    </div>

    <table class="table table-hover table-bordered shadow-sm rounded">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Age</th>
                <th>Post Code</th>
                <th>Height (m)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No customers available. Click "Add Customer" to get started.</td>
                </tr>
            }
            else
            {
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@i</td>
                        <td>@Model[i].Name</td>
                        <td>@Model[i].Age</td>
                        <td>@Model[i].PostCode</td>
                        <td>@Model[i].Height.ToString("0.00")</td>
                        <td>
                            <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "Customer", new { id = i })">
                                 Edit
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>